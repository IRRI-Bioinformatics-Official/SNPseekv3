<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:security="http://www.springframework.org/schema/security"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:mvc="http://www.springframework.org/schema/mvc"

	xsi:schemaLocation="http://www.springframework.org/schema/beans 
     http://www.springframework.org/schema/beans/spring-beans-3.0.xsd 
       http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-3.0.xsd   
                  http://www.springframework.org/schema/security
                   http://www.springframework.org/schema/security/spring-security-3.0.xsd   
    http://www.springframework.org/schema/aop 
    http://www.springframework.org/schema/aop/spring-aop-3.0.xsd
    http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-3.0.xsd">

	<bean id="contextApplicationContextProvider"
		class="org.irri.iric.portal.ApplicationContextProvider"></bean>




	<!-- generated by myeclipse CRUD scaffolding -->
	<import resource="classpath:misc-dao-context.xml" />


	<!-- DAO and domains generated using HibernateTools from Views are in this 
		package -->

	<context:component-scan
		base-package="org.irri.iric.ds.chado.dao"/>
	<context:component-scan
		base-package="org.irri.iric.portal.variety.service"
		scoped-proxy="interfaces" />
	<context:component-scan
		base-package="org.irri.iric.portal.genotype.service"
		scoped-proxy="interfaces" />
	<context:component-scan
		base-package="org.irri.iric.portal.genomics.service"
		scoped-proxy="interfaces" />
	<context:component-scan
		base-package="org.irri.iric.portal.admin" scoped-proxy="interfaces" />
	<context:component-scan
		base-package="org.irri.iric.portal.blank_module.service"
		scoped-proxy="interfaces" />
	<context:component-scan
		base-package="org.irri.iric.portal.gwas.service"
		scoped-proxy="interfaces" />
	<context:component-scan
		base-package="org.irri.iric.portal.webclient"
		scoped-proxy="interfaces" />
	<context:component-scan
		base-package="org.irri.iric.portal.seed.service"
		scoped-proxy="interfaces" />
	<context:component-scan
		base-package="org.irri.iric.portal.email" scoped-proxy="interfaces" />
	<context:component-scan
		base-package="org.irri.iric.portal.chado.oracle.service"
		scoped-proxy="interfaces" />
	<context:component-scan
		base-package="org.irri.iric.portal.gwas.dao" scoped-proxy="interfaces" />
	<context:component-scan
		base-package="org.irri.iric.galaxy.service" scoped-proxy="interfaces" />
		
	

	<!-- <context:component-scan base-package="org.irri.iric.portal.genotype.service" 
		/> <context:component-scan base-package="org.irri.iric.portal.variety.service" 
		/> <context:component-scan base-package="org.irri.iric.portal.genomics.service" 
		/> <context:component-scan base-package="org.irri.iric.portal.gwas.service" 
		/> <context:component-scan base-package="org.irri.iric.portal.gwas.dao" /> -->

	<bean id="VarietyFacade"
		class="org.irri.iric.portal.variety.service.VarietyFacadeChadoImpl" />
	<bean id="GenotypeFacade"
		class="org.irri.iric.portal.genotype.service.GenotypeFacadeChadoImpl" />
	<bean id="GenomicsFacade"
		class="org.irri.iric.portal.genomics.service.GenomicsFacadeImpl" />
	<bean id="GwasFacade"
		class="org.irri.iric.portal.gwas.service.GwasFacadeImpl" />
	




	<bean id="taskExecutor"
		class="org.springframework.scheduling.concurrent.ThreadPoolTaskExecutor">
		<property name="corePoolSize" value="5" />
		<property name="maxPoolSize" value="10" />
		<property name="queueCapacity" value="25" />
	</bean>


	<!-- <import resource="classpath:iric_prod_crud-security-context.xml" /> 
		<import resource="classpath:iric_prod_crud-service-context.xml" /> -->





</beans>