<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans  
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd 
	http://www.springframework.org/schema/context  
	http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<!-- default-autowire-candidates="*Postges" -->
	<bean id="contextApplicationContextProvider"
		class="org.irri.iric.portal.ApplicationContextProvider" />

	<!-- context:component-scan base-package="org.irri.iric.portal.admin"/ -->
	<context:component-scan
		base-package="org.zkoss.zkspringessentials,org.zkoss.spring.beans.zkcomponents" />

	<bean
		class="org.springframework.orm.jpa.support.PersistenceAnnotationBeanPostProcessor" />

	
	<!-- generated by myeclipse CRUD scaffolding -->

	<context:property-placeholder location="classpath:IpAddresses.properties"/>


	<context:component-scan
		base-package="org.irri.iric.portal.admin" />
	<context:component-scan
		base-package="org.irri.iric.portal.genotype.service" />
	<context:component-scan
		base-package="org.irri.iric.portal.variety.service" />
	<context:component-scan
		base-package="org.irri.iric.portal.genomics.service" />
	<context:component-scan
		base-package="org.irri.iric.portal.gwas.service" />
	<context:component-scan
		base-package="org.irri.iric.portal.gwas.dao" />
	<context:component-scan
		base-package="org.irri.iric.portal.email" />
	<context:component-scan
		base-package="org.irri.iric.galaxy.service" />
	<context:component-scan
		base-package="org.irri.iric.portal.config" />
	
	<context:component-scan
		base-package="org.irri.iric.ds.chado.dao" />
		
	<context:component-scan
		base-package="org.irri.iric.ds.chado.domain.model" />

	<import resource="classpath:misc-dao-context.xml" />
	<import resource="classpath:applicationContextDs.xml" />

	<bean id="PhylotreeService" class="org.irri.iric.portal.genotype.service.PhylotreeServiceImpl"/>

	<bean id="AsyncJobExecutorConfig" class="org.irri.iric.portal.admin.AsyncJobExecutorConfig"/>
	
	<bean id="JobsFacade" class="org.irri.iric.portal.admin.JobFacadeSingletonImpl"/>
	
	<bean id="VarietyPropertiesService" class="org.irri.iric.portal.variety.service.VarietyPropertiesServiceImplURLsFlatfiles"/>
	
	<bean id="PlantTraitRiceVarietyOntologyService" class="org.irri.iric.portal.variety.service.PlantTraitRiceVarietyOntologyService"/>
	
	<bean id="WorkspaceFacade" class="org.irri.iric.portal.admin.WorkspaceFacadeSessionScopedImpl"/>
	
	<bean id="VarietyFacade" class="org.irri.iric.portal.variety.service.VarietyFacadeChadoImpl"/>
	
	<bean id="GenotypeFacade" class="org.irri.iric.portal.genotype.service.GenotypeFacadeChadoImpl"/>
	
	<bean id="VarietyStockDAO" class="org.irri.iric.ds.chado.dao.impl.VAllsampleBasicpropDAOImpl"/>
	
	<bean id="VarietiesGenotypeService" class="org.irri.iric.portal.genotype.service.VarietiesGenotypeSNPsIndelServiceImpl"/>
	
	<bean id="LocusNotesDAO" class="org.irri.iric.portal.chado.oracle.dao.VLocusNotesDAOImpl"/>
	
	<bean id="SnpsStringNPBService" class="org.irri.iric.portal.genotype.service.SnpsStringHDF5nRDBMSHybridService"/>
	
	<bean id="SnpsStringService" class="org.irri.iric.portal.genotype.service.SnpsStringMultiHDF5nRDBMSHybridService"/>
	
	<bean id="MultipleReferenceConverterDAO" class="org.irri.iric.portal.chado.oracle.dao.VConvertposAny2allrefsDAOMVImpl"/>
	
	<bean id="ListItems" class="org.irri.iric.portal.dao.ListItemsDAOAllImpl"/>
	
	<bean id="IndelService" class="org.irri.iric.portal.genotype.service.IndelStringHDF5nRDBMSHybridService"/>
	
	<bean id="VarietiesGenotypeAsyncService" class="org.irri.iric.portal.genotype.service.VarietiesGenotypeAsyncService"/>
	
	<bean id="ipAddressesConfig" class="org.irri.iric.portal.config.IpAddressesConfig"/>


	<bean id="taskExecutor2"
		class="org.springframework.scheduling.concurrent.ThreadPoolTaskExecutor">
		<property name="corePoolSize" value="5" />
		<property name="maxPoolSize" value="10" />
		<property name="queueCapacity" value="25" />
	</bean>


	<!-- <import resource="classpath:iric_prod_crud-security-context.xml" /> 
		<import resource="classpath:iric_prod_crud-service-context.xml" /> -->


	<!-- for the ZK interface -->
	<context:component-scan
		base-package="org.irri.iric.portal.genotype.zkui" />
	<context:component-scan
		base-package="org.irri.iric.portal.variety.zkui" />
	<context:component-scan
		base-package="org.irri.iric.portal.admin.zkui" />
	<context:component-scan
		base-package="org.irri.iric.portal.genomics.zkui" />
	<context:component-scan
		base-package="org.irri.iric.portal.seed.zkui" />
	<context:component-scan
		base-package="org.irri.iric.portal.galaxy.zkui" />

	<!-- for rest webservice -->
	<context:component-scan
		base-package="org.irri.iric.portal.ws.rest" scoped-proxy="interfaces" />
	<context:component-scan
		base-package="org.irri.iric.portal.remoteserver.blast"
		scoped-proxy="interfaces" />

	<!-- Services -->
	<context:component-scan
		base-package="org.irri.iric.portal.dao" scoped-proxy="interfaces" />
	<context:component-scan
		base-package="org.irri.iric.portal.seed" scoped-proxy="interfaces" />
	<context:component-scan
		base-package="org.irri.iric.portal.loader.dao"
		scoped-proxy="interfaces" />

	<context:component-scan
		base-package="org.irri.iric.portal.chado.oracle.dao"
		scoped-proxy="interfaces" />
	<context:component-scan
		base-package="org.irri.iric.portal.gwas.dao" scoped-proxy="interfaces" />


</beans>